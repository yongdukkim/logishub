<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/activity_padding"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:layout_marginRight="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_loading"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor_title"
                    android:background="@drawable/line_bottom"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_marginBottom="7dp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="강 원"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="경 기"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="광 주"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="서 울"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="전 북"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="제 주"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:layout_marginLeft="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_alight"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor_title"
                    android:background="@drawable/line_bottom"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="강 원"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="경 기"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="광 주"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="서 울"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="전 북"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:text="제 주"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:orientation="horizontal">

        <Button
            android:text="@string/save"
            android:id="@+id/btn_save_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/selector_btn"/>

        <Button
            android:text="@string/cancel"
            android:id="@+id/btn_cencle_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/selector_btn_cancel"/>

    </LinearLayout>
</TableLayout>